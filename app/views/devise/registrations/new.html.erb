<%= render "shared/header" %>
<div class="registration">

<div class="registration-title">新規会員登録</div>
<div class="form-field">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-group">
  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, placeholder:"例) 山田太郎", autofocus: true, maxlength:"10" %>
  </div>

  <div class="field">
    <%= f.label :email, "Eメールアドレス" %><br />
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード入力" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :profile, "プロフィール" %><br />
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile" %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
</div>
</div>

<%= render "devise/shared/links" %>
