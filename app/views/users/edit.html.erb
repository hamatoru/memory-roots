<%= render "shared/header" %>



<div class="main-edit">
<h2>編集ページ</h2>
<div class="user-edit">
  <%= form_with(model: @user, local: true) do |form| %>
    <div class="container">
      <%= image_tag 'sample_image.jpg', class: "sample-image" %>
      <%= file_field :image, id:"item-image" %>
      <%= form.text_field :name, placeholder: "ニックネーム", class:"nicknameedit" %>
      <%= form.text_area :text, placeholder: "例)よろしくお願いします", rows: "5" %>
    <div class="update-btn">
      <%= form.submit "更新" %>
    </div>
    </div>
  <% end %>
</div>
</div>